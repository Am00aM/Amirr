<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Morse Code Converter</title>
    <style>
        .clickable {
            cursor: pointer;
            user-select: all;
        }
    </style>
</head>
<body>
    <label for="input">Enter text or Morse code:</label>
    <input type="text" id="input">
    <button onclick="convert()">Convert</button>
    <p id="output" onclick="copyText()"></p>

    <script>
        function convert() {
            const input = document.getElementById('input').value;
            let result;
            if (/[.-]/.test(input)) {
                // Morse to English
                const morseCode = {
                    '.-': 'a', '-...': 'b', '-.-.': 'c', '-..': 'd',
                    '.': 'e', '..-.': 'f', '--.': 'g', '....': 'h',
                    '..': 'i', '.---': 'j', '-.-': 'k', '.-..': 'l',
                    '--': 'm', '-.': 'n', '---': 'o', '.--.': 'p',
                    '--.-': 'q', '.-.': 'r', '...': 's', '-': 't',
                    '..-': 'u', '...-': 'v', '.--': 'w', '-..-': 'x',
                    '-.--': 'y', '--..': 'z',
                    '.----': '1', '..---': '2', '...--': '3', '....-': '4',
                    '.....': '5', '-....': '6', '--...': '7', '---..': '8',
                    '----.': '9', '-----': '0', ' ': ' '
                };
                result = input.split(' ').map(code => morseCode[code] || '?').join('');
            } else {
                // English to Morse
                const englishToMorse = {
                    a: '.-', b: '-...', c: '-.-.', d: '-..', e: '.',
                    f: '..-.', g: '--.', h: '....', i: '..', j: '.---',
                    k: '-.-', l: '.-..', m: '--', n: '-.', o: '---',
                    p: '.--.', q: '--.-', r: '.-.', s: '...', t: '-',
                    u: '..-', v: '...-', w: '.--', x: '-..-', y: '-.--',
                    z: '--..', 1: '.----', 2: '..---', 3: '...--', 4: '....-',
                    5: '.....', 6: '-....', 7: '--...', 8: '---..', 9: '----.',
                    0: '-----', ' ': '/'
                };
                result = input.toLowerCase().split('').map(char => englishToMorse[char] || '/').join(' ');
            }
            document.getElementById('output').textContent = result;
        }

        function copyText() {
            const outputElement = document.getElementById('output');
            const range = document.createRange();
            range.selectNodeContents(outputElement);
            const selection = window.getSelection();
            selection.removeAllRanges();
            selection.addRange(range);
            document.execCommand('copy');
            selection.removeAllRanges();

            alert('The text has been copied!');
        }
    </script>
</body>
</html>